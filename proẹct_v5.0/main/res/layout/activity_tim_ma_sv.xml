<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimMaSVActivity"
    android:orientation="vertical"
    android:background="@drawable/backlogin">

    <TextView
        style="@style/Tieude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/timkiem"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textTimKiemMa"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            app:hintTextAppearance="@style/HintText">
            >

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ma"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <ImageButton
            android:id="@+id/ibTKMa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_marginTop="15dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listViewTKMa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"></ListView>

</LinearLayout>