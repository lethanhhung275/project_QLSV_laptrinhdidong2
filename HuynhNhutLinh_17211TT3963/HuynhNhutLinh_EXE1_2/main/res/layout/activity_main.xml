<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        style="@style/Tieude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Tieude"
        android:gravity="center"/>

    //Input num A
    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/inputA"
            android:inputType="number"/>

    </android.support.design.widget.TextInputLayout>

    //input num B
    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        >
        <android.support.design.widget.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/inputB"
            android:inputType="number"/>

    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/btnLon"
            style="@style/pheptinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lon"/>
        <Button
            android:id="@+id/btnBang"
            style="@style/pheptinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bang"/>
        <Button
            android:id="@+id/btnNho"
            style="@style/pheptinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nho"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>