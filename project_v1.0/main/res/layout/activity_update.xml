<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/nen"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="115dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="0.89">

        <ImageView
            android:id="@+id/imgHinhDaiDien"
            android:layout_width="119dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"
            app:srcCompat="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.07" />

        <Button
            android:id="@+id/btnLuu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu" />

        <Button
            android:id="@+id/btnHuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hủy" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="0.88" />

        <Button
            android:id="@+id/btnTroVe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trở Về" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="0dp"
        android:orientation="vertical"
        android:layout_weight="0.35">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.48"
            android:gravity="center_vertical"
            android:text="Mã SViên" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.70"
            android:gravity="center_vertical"
            android:text="Tên SViên" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.69"
            android:gravity="center_vertical"
            android:text="Giới Tính" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày Sinh"
            android:gravity="center_vertical"
            android:layout_weight="0.70" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.72"
            android:gravity="center_vertical"
            android:text="Địa Chỉ" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="0.74"
            android:text="Khóa Học" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="0.59"
            android:text="Khoa" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.66"
            android:gravity="center_vertical"
            android:text="Lớp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.82"
            android:gravity="center_vertical"
            android:text="Ngành" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.74"
            android:gravity="center_vertical"
            android:text="Bậc ĐTạo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.32"
            android:gravity="center_vertical"
            android:text="SĐT" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="147dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtMA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.42"
            android:ems="10"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/edtTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.42"
            android:ems="10"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/edtGioiTinh"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.06"
                android:ems="10"
                android:textStyle="bold"
                android:enabled="false"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:text="" />

            <ImageButton
                android:id="@+id/btnGT"
                android:layout_width="44dp"
                android:layout_height="43dp"
                app:srcCompat="@drawable/common_google_signin_btn_icon_light_disabled" />

        </LinearLayout>

        <EditText
            android:id="@+id/edtNgaySinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.42"
            android:ems="10"
            android:gravity="center_vertical"
            android:inputType="date"
            android:text="" />

        <EditText
            android:id="@+id/edtDiaChi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.42"
            android:ems="10"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/edtKhoaHoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.42"
            android:ems="10"
            android:gravity="center_vertical"
            android:inputType="date"
            android:text="" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/edtKhoa"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.06"
                android:ems="10"
                android:enabled="false"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:text=""
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnKhoa"
                android:layout_width="44dp"
                android:layout_height="43dp"
                app:srcCompat="@drawable/common_google_signin_btn_icon_light_disabled" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/edtLop"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.06"
                android:ems="10"
                android:enabled="false"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:text=""
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnLop"
                android:layout_width="44dp"
                android:layout_height="43dp"
                app:srcCompat="@drawable/common_google_signin_btn_icon_light_disabled" />

        </LinearLayout>


        <EditText
            android:id="@+id/edtNganh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.42"
            android:ems="10"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/edtBacDT"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.06"
                android:ems="10"
                android:enabled="false"
                android:gravity="center_vertical"
                android:inputType="textPersonName"
                android:text=""
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnBacDT"
                android:layout_width="44dp"
                android:layout_height="43dp"
                app:srcCompat="@drawable/common_google_signin_btn_icon_light_disabled" />

        </LinearLayout>


        <EditText
            android:id="@+id/edtDiem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.42"
            android:ems="10"
            android:gravity="center_vertical"
            android:inputType="numberDecimal"
            android:text="" />

    </LinearLayout>

</LinearLayout>
